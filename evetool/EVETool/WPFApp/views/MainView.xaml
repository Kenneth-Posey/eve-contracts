<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Label x:Name="statusMessageLabel" HorizontalAlignment="Left" Height="23" Margin="103,55,0,0" 
                 Content="{Binding statusMessage}" VerticalAlignment="Top" Width="393"/>
        <Button x:Name="button" Content="Begin Monitor" HorizontalAlignment="Left" Margin="28,111,0,0" VerticalAlignment="Top" Width="118"/>
        <Label x:Name="statusLabel" Content="Status:" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ssoButton" Content="Login SSO" HorizontalAlignment="Left" 
                Margin="174,111,0,0" VerticalAlignment="Top" Width="118"/>
    </Grid>
</Window>